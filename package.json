{
	"name": "murmurations-aggregator",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "husky",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"db:generate": "pnpm exec drizzle-kit generate",
		"db:migrate": "pnpm exec wrangler d1 migrations apply murmurations-aggregator-preview --local",
		"db:migrate:preview": "pnpm exec wrangler d1 migrations apply murmurations-aggregator-preview --remote",
		"db:migrate:prod": "pnpm exec wrangler d1 migrations apply murmurations-aggregator --remote --env production"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250705.0",
		"@eslint/compat": "^1.3.1",
		"@eslint/js": "^9.30.1",
		"@internationalized/date": "^3.8.2",
		"@lucide/svelte": "^0.515.0",
		"@paralleldrive/cuid2": "^2.2.2",
		"@playwright/test": "^1.53.2",
		"@sveltejs/adapter-cloudflare": "^7.0.4",
		"@sveltejs/kit": "^2.22.2",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.11",
		"@tanstack/table-core": "^8.21.3",
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@types/json-schema": "^7.0.15",
		"@types/leaflet": "^1.9.19",
		"@types/leaflet.markercluster": "^1.5.5",
		"bits-ui": "^2.8.10",
		"clsx": "^2.1.1",
		"drizzle-kit": "^0.30.6",
		"eslint": "^9.30.1",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.15.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"mode-watcher": "^1.1.0",
		"pako": "^2.1.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.13",
		"svelte": "^5.35.2",
		"svelte-check": "^4.2.2",
		"svelte-sonner": "^1.0.5",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "^4.1.11",
		"tw-animate-css": "^1.3.5",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.35.1",
		"vite": "^6.3.5",
		"vite-plugin-devtools-json": "^0.1.1",
		"vitest": "^3.2.4",
		"wrangler": "^4.23.0"
	},
	"dependencies": {
		"@tanstack/svelte-query": "^5.81.5",
		"@ucans/ucans": "^0.12.0",
		"drizzle-orm": "^0.40.1",
		"formsnap": "^2.0.1",
		"leaflet": "^1.9.4",
		"leaflet.markercluster": "^1.5.3",
		"paneforge": "1.0.0-next.5",
		"resend": "^4.6.0",
		"uint8arrays": "^5.1.0",
		"vaul-svelte": "1.0.0-next.7"
	},
	"lint-staged": {
		"*.{ts,svelte}": [
			"pnpm format",
			"pnpm lint"
		],
		"*.{css,html,json}": [
			"pnpm format"
		]
	}
}
