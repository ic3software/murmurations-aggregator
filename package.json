{
	"name": "murmurations-aggregator",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "husky",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"db:generate": "pnpm exec drizzle-kit generate",
		"db:migrate": "pnpm exec wrangler d1 migrations apply murmurations-aggregator-preview --local",
		"db:migrate:preview": "pnpm exec wrangler d1 migrations apply murmurations-aggregator-preview --remote",
		"db:migrate:prod": "pnpm exec wrangler d1 migrations apply murmurations-aggregator --remote --env production"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250514.0",
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@lucide/svelte": "^0.510.0",
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-cloudflare": "^7.0.3",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"autoprefixer": "^10.4.20",
		"bits-ui": "^1.4.8",
		"clsx": "^2.1.1",
		"drizzle-kit": "^0.30.2",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.0.0",
		"mode-watcher": "^1.0.7",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.10",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"svelte-sonner": "^1.0.1",
		"tailwind-merge": "^3.3.0",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "^3.4.17",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.0.0",
		"vitest": "^3.0.0",
		"wrangler": "^4.14.4"
	},
	"dependencies": {
		"drizzle-orm": "^0.40.1"
	},
	"lint-staged": {
		"*.{ts,svelte}": [
			"pnpm format",
			"pnpm lint"
		],
		"*.{css,html,json}": [
			"pnpm format"
		]
	}
}
